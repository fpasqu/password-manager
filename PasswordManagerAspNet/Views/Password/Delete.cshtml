@model PasswordManagerAspNet.Models.Entities.Password
<link rel="stylesheet" href="~/css/customStyle.css">

@{
    ViewData["Title"] = "Delete";
}

<h4>Are you sure you want to delete this password?</h4>
<p>All the following data will be deleted.</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PasswordValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PasswordValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserMail" />

        <div class="form-group row">
            <div class="col ">
                <a asp-action="List" class="btn btn-secondary custom-form-controls">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-danger custom-form-controls" />
            </div>
        </div>
    </form>
</div>
