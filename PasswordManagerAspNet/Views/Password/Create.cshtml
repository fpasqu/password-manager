@model PasswordManagerAspNet.Models.Entities.Password
<link rel="stylesheet" href="~/css/customStyle.css">

@{
    ViewData["Title"] = "New password";
}

<h4>New password</h4>
Fill in the required fields to save and encrypt.
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserMail" />

            <div class="form-group custom-form-group row">
                <div class="col-md-6">
                    <label asp-for="AccountName" class="control-label"></label>
                    <input asp-for="AccountName" class="form-control darker-input" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="AccountEmail" class="control-label"></label>
                    <input asp-for="AccountEmail" class="form-control darker-input" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group custom-form-group row">
                <div class="col-md-6">
                    <label asp-for="PasswordValue" class="control-label"></label>
                    <input asp-for="PasswordValue" class="form-control darker-input" />
                    <span asp-validation-for="PasswordValue" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control darker-input" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group custom-form-group row">
                <div class="col col-md-6">
                    <a asp-action="List" class="btn btn-secondary custom-form-controls">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary custom-form-controls" />
                </div>
            </div>
        </form>
    </div>
</div>

